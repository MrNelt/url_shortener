{
  "openapi": "3.0.2",
  "info": {
    "title": "UrlShortener API",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000/"
    }
  ],
  "components": {
    "schemas": {
      "error": {
        "type": "object",
        "properties": {
          "detail": {
            "description": "error message",
            "type": "string",
            "required": true
          }
        }
      }
    }
  },
  "paths": {
    "/make_shorter": {
      "post": {
        "description": "creates short url",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "url": {
                    "description": "url to make shorter",
                    "type": "string",
                    "default": "https://yandex.ru",
                    "required": true
                  },
                  "short_suffix": {
                    "description": "short key to be mapped to long url",
                    "type": "string",
                    "required": true
                  },
                  "ttl_count": {
                    "description": "number of time-units this short url is going to be active. \nMaximum value must not be more than 48 hours\n",
                    "type": "integer",
                    "required": true
                  },
                  "ttl_unit": {
                    "description": "time unit for time_to_live parameter",
                    "type": "string",
                    "enum": [
                      "SECONDS",
                      "MINUTES",
                      "HOURS",
                      "DAYS"
                    ],
                    "required": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "short_url": {
                      "type": "string"
                    },
                    "secret_key": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "invalid input parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      }
    }
  }
}